<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false" scan="true">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %highlight([%msg]%n)</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <logger name="ch.qos.logback" level="WARN" additivity="false" />
    <logger name="org.springframework.boot.devtools.env" level="WARN" additivity="false" />
    <logger name="org.springframework.boot.devtools.autoconfigure" level="WARN" additivity="false" />
</configuration>